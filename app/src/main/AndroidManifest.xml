<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dndspellbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DnDSpellbook">
        <activity android:name=".BanishmentActivity"></activity>
        <activity android:name=".AnimateDeadActivity" />
        <activity android:name=".AnimalFriendshipActivity" />
        <activity android:name=".AbsorbElementsActivity" />
        <activity android:name=".EditCharacter" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CharacterCreationActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SignInActivity" />
    </application>

</manifest>